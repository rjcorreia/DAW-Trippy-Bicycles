{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <section class="product-area shop-sidebar shop section">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-4 col-12">
                    <div class="shop-sidebar">
                        <!-- Single Widget -->
                        <div class="single-widget category box-shop-grid text-light">
                            <h3 class="title">Categories</h3>
                            <!-- The filterable elements. Note that some have multiple class names (this can be used if they belong to multiple categories) -->
                                {% for category in categories %}
                            <div class="container">
                            </div>
                                {% endfor %}
                            <ul class="categor-list">
                                <div id="myBtnContainer">
                                <li><button class="btn active" onclick="filterSelection('all')"> Show all</button></li>
                                {% for category in categories %}
                                    <li><button class="btn active" onclick="filterSelection('{{ category.name }}')"> {{ category.name }}</button></li>
                                {% endfor %}
                                </div>
                            </ul>

                        </div>
                    </div>
                </div>
                <div class="col-lg-9 col-md-8 col-12 box-shop-grid">
                    <div class="col-12">
                        <div class="row">
                            {% for product in products %}
                                <div class="col-lg-4 col-md-6 col-12 filter {{ product.cat.name }}">
                                    <div class="single-product">
                                        <div class="product-img">
                                            <img class="default-img" src="{{ asset(product.image) }}" alt="#">
                                            </a>
                                            <div class="button-head">
                                                <div class="product-action-2">
                                                    <a title="Add to cart" href={{ path('update_cart',{'productId':product.id}) }}>add to cart</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="product-content">
                                            <h5 class="text-center">{{ product.name }}</h5>
                                            <p>{{ product.description }}</p>
                                            <div class="product-price">
                                                <span>â‚¬{{ product.price }}.00</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--/ End Product Style 1  -->
{% endblock %}
