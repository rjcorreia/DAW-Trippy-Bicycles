{% extends 'base.html.twig' %}

{% block title %}Trippy | Login{% endblock %}

{% block body %}
    <div class="container">
        <div class="login-form mt-4 pt-4 white-box-login">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger w-50 mt-3 show mx-auto text-center"
                         role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('Logout') }}">Logout</a>
                    </div>
                {% endif %}
                <h1 class="mt-5 text-center">Login</h1>
                <div class="form-group pt-4 form-bars">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                           required autofocus>
                </div>
                <div class="form-group pt-4 form-bars">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control">
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >


                <div class="text-center pt-3">
                    <button type="submit" style="width:10rem;" class="btn main-blue text-light">Log in</button>
                    <input class='ml-3' type="checkbox" name="_remember_me"> Remember me</input>
{#                    <a class='ml-3' href="{{ path('app_forgot_password_request') }}">Forgot password?</a>#}
                </div>
            </form>
        </div>
    </div>
{% endblock %}
